# PayInbox Agent Service Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# Solana Configuration
# ============================================================================

# Solana RPC endpoint (use devnet for testing)
SOLANA_RPC=https://api.devnet.solana.com

# Deployed program ID
PROGRAM_ID=EGWdk3hNnHse2xZw8AZy1HwDJiGkSnscMitrbs4Ax5V4

# ============================================================================
# Email Service (Resend)
# ============================================================================

# Get your API key from https://resend.com
# Leave empty for development (emails will be logged to console)
RESEND_API_KEY=

# From email address (must be verified in Resend)
FROM_EMAIL=PayInbox <noreply@yourdomain.com>

# ============================================================================
# Server Configuration
# ============================================================================

# Server port
PORT=3001

# IMPORTANT: Set this to a secure random string (at least 32 characters)
# Generate with: openssl rand -hex 32
SERVER_SALT=your-random-salt-here-change-me-minimum-32-chars

# Environment (development or production)
NODE_ENV=development

# ============================================================================
# Frontend URL
# ============================================================================

# Where claim links should point to
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Database (PostgreSQL) - Optional for MVP
# ============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/payinbox
